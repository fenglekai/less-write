{
  "name": "less-write",
  "version": "1.0.0",
  "packageManager": "8",
  "description": "package manager",
  "keywords": [],
  "author": "",
  "license": "MIT",
  "scripts": {
    "cli": "less-write-cli c",
    "dev": "pnpm -C play/vue-app dev",
    "build": "pnpm -C internal/build start",
    "clean": "pnpm run clean:dist && pnpm run -r --parallel clean",
    "clean:dist": "rimraf dist",
    "gen:version": "tsx scripts/gen-version.ts",
    "update:version": "tsx scripts/update-version.ts",
    "stub": "pnpm run -r --parallel stub",
    "postinstall": "pnpm stub && pnpm gen:version"
  },
  "dependencies": {
    "@less-write/build": "workspace:*",
    "@less-write/components": "workspace:*",
    "@less-write/hooks": "workspace:*",
    "@less-write/styles": "workspace:*",
    "@less-write/utils": "workspace:*",
    "less-write-cli": "workspace:*"
  },
  "devDependencies": {
    "@esbuild-kit/cjs-loader": "^2.4.4",
    "@pnpm/find-workspace-packages": "^6.0.9",
    "@types/less": "^3.0.6",
    "@types/node": "^20.12.12",
    "@vitejs/plugin-vue": "^5.0.4",
    "consola": "^3.2.3",
    "cpy": "^11.0.1",
    "esno": "^4.7.0",
    "fast-glob": "^3.3.2",
    "less": "^4.2.0",
    "rimraf": "^5.0.7",
    "tsx": "^4.16.3",
    "typescript": "^5.4.5",
    "unplugin-vue-components": "^0.27.0",
    "vite": "^5.2.11",
    "vite-plugin-dts": "^3.9.1",
    "vue": "^3.4.27"
  },
  "engines": {
    "node": ">= 18"
  }
}
