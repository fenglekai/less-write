{
  "extends": "./tsconfig.base.json",
  "compilerOptions": {
    "composite": true,
    "jsx": "preserve",
    "lib": ["ESNext", "DOM", "DOM.Iterable"],
    "types": ["unplugin-vue-macros/macros-global"],
    "skipLibCheck": true
  },
  "include": [
    "packages/**/*",
    "typings/components.d.ts",

    // playground
    "play/vue-app/main.ts",
    "play/vue-app/src/**/*",
    "play/vue-app/resolver.ts",
    "play/vue-app/vue-shim.d.ts"
  ],
  "exclude": ["node_modules", "**/dist", "**/gulpfile.ts"]
}
